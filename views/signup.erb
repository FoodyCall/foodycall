<div class="container sigup">
  <div class="container">
    <div class="col-lg-12">
    <div id="logbox">
      <form id="signup" method="post" action="/signup">
        <h2>Create FoodyCall Account</h2>
        <div class="row">
          <input name="user[firstName]" type="text" placeholder="First Name" pattern="^[\w]{3,16}$" autofocus="autofocus" required="required" class="input pass col-lg-5"/>
          <input name="user[lastName]" type="text" placeholder="Last Name" pattern="^[\w]{3,16}$" autofocus="autofocus" required="required" class="input pass col-lg-5 col-lg-push-2"/>
        </div>

        <div class="row">
          <input name="user[email]" type="email" placeholder="Email " class="input pass col-lg-12"/>
        </div>

        <div class="row">
          <input name="user[birthday]" type="text" placeholder="Birthday (YYYY/MM/DD)" class="input pass col-lg-12"/>
        </div>

        <div class="row">
          <input name="user[country]" type="text" placeholder="Country" class="input pass col-lg-5"/>
          <input name="user[city]" type="text" placeholder="City" class="input pass col-lg-5 col-lg-push-2"/>
        </div>

        <div class="row">
          <input name="user[password]" type="password" placeholder="Password" required="required" class="input pass col-lg-12"/>
        </div>

        <div class="row">
            <input name="user[password2]" type="password" placeholder="Confirm Password" required="required" class="input pass col-lg-12"/>
        </div>

        <input type="submit" value="Sign up" class="inputButton"/>

      </form>
    </div>
